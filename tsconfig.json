{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "dts",
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
